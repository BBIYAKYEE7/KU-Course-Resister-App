{
  "name": "sugang",
  "productName": "고려대학교 수강신청 시스템",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:all": "electron-builder --win --mac",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "sugang",
    "korea-university",
    "course-registration"
  ],
  "author": "Korea University Course Registration System",
  "license": "MIT",
  "description": "고려대학교 수강신청 도우미 애플리케이션",
  "homepage": "https://github.com/your-username/sugang",
  "build": {
    "appId": "com.korea.sugang",
    "productName": "고려대 수강신청",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "package.json",
      "assets/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "pkg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "public.app-category.education"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "고려대 수강신청"
    },
    "dmg": {
      "title": "고려대 수강신청 설치",
      "backgroundColor": "#8B0000",
      "window": {
        "width": 600,
        "height": 400
      }
    },
    "pkg": {
      "installLocation": "/Applications"
    }
  },
  "devDependencies": {
    "@electron/packager": "^18.4.0",
    "electron": "^37.2.5",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "electron-store": "^8.2.0"
  }
}
